<%include ./partials/header %>
    <div class="container">
        <div class="row display-flex" style="display:flex; flex-wrap: wrap;">
            
            <% data["Search"].forEach(function(movie){ %>
                
                    <div class="col-md-4 col-sm-6 col-lg-4">
                       <div class="thumbnail">
                            <img src="<%= movie["Poster"]=="N/A"? 'https:\/\/via.placeholder.com/320x540': movie["Poster"] %>" alt="<%= movie["Title"]%>">
                            <div class="caption">
                                <h3><strong><%= movie["Title"]%> - <%= movie["Year"] %></strong></h3>
                                
                                <form action="/info" method="GET">
                                <!--<div class="form-group">-->
                                <input type="text" class="form-control hidden" value="<%=movie["imdbID"]%>" name="info">
                                <input type="text" class="form-control hidden" value="<%=JSON.stringify(data)%>" name="list">
                                <!--</div>-->
                                
                                <button type="submit" class="btn btn-primary center-block">More info</button>
                                </form>
                                
                            </div> 
                       </div>
                    </div>
                
            <% }); %>
        </div>
        
        <nav aria-label="Page navigation">
          <ul class="pagination">
                
                <li class="page-item"><a class="page-link" href="/results/<%=query%>/<%=page==1?page:page-1;%>" >Previous</a></li>
                
                <% for (var i=1; i < Math.ceil(data["totalResults"]/10); i++) { %>
                
                    <li class="page-item"><a class="page-link" href="/results/<%=query%>/<%=i%>"> <%=i%> </a></li>
                    
                <% } %>
                    <li class="page-item"><a class="page-link" href="/results/<%=query%>/<%=page==(Math.ceil(data["totalResults"]/10))?page:page+1;%>">Next</a></li>
          </ul>
        </nav>
        
    </div>
    

<%include ./partials/footer %>

        